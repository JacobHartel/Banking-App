@using GiantNationalBankClient.Models
@model LoginResponseModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<section class="intro">
    <h1>Admin Dashboard</h1>
</section>

<section>
    <h4>Admin Info</h4>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.AdminData != null)
            {
                <tr>
                    <td>@Model.AdminData.FirstName</td>
                    <td>@Model.AdminData.LastName</td>
                </tr>
            }
        </tbody>
    </table>
</section>

<section class="dashboardLinks">
    <ul>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Admin" asp-action="GetAllUsersView">View All Users</a>
        </li>
    </ul>
</section>

