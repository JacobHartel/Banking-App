@using GiantNationalBank.Models
@model RegistrationModel
@{
    ViewData["Title"] = "User Registration";
}
<h1>@ViewData["Title"]</h1>

<p>Complete this form to create a new user account. </p>
<div class="regForm">
    <form asp-action="ProcessRegistration" method="post">
        <label for="FirstName">First Name: </label>
        <input asp-for="FirstName" /> <br />
        <span asp-validation-for="FirstName"></span>

        <label for="LastName">Last Name: </label>
        <input asp-for="LastName" /><br />
        <span asp-validation-for="LastName"></span>

        <label for="Email">Email: </label>
        <input asp-for="Email" /><br />
        <span asp-validation-for="Email"></span>

        <label for="Phone Number">Phone: </label>
        <input asp-for="Phone" /><br />
        <span asp-validation-for="Phone"></span>
        <p></p>

        <h4>Mailing Information</h4>
        <label for="Street Address">Street Address: </label>
        <input asp-for="Street1" /><br />
        <span asp-validation-for="Street1"></span>

        <label for="Address Line 2">Address Line 2: </label>
        <input asp-for="Street2" /><br />

        <label for="City">City: </label>
        <input asp-for="City" /><br />
        <span asp-validation-for="City"></span>

        <label for="State">State: </label>
        <input asp-for="State" /><br />
        <span asp-validation-for="State"></span>

        <label for="Zip Code">ZipCode: </label>
        <input asp-for="ZipCode" /><br />
        <span asp-validation-for="ZipCode"></span>
        <p></p>

        <h4>Login Information</h4>
        <label for="Username">Username: </label>
        <input asp-for="Username" /><br />
        <span asp-validation-for="Username"></span>

        <label for="Password">Password: </label>
        <input asp-for="Password" /><br />
        <span asp-validation-for="Password"></span>

        <input asp-for="UserType" value="User" /><br />
        <p></p>
        <button type="submit" value="Submit">Submit</button>
    </form>
</div>