@using GiantNationalBankClient.Models
@model User
@{
    ViewData["Title"] = "Edit Profile";
}

<h1>Edit Profile</h1>
<form asp-action="SaveProfile" method="post">
    <div>
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <h4>Mailing Information</h4>
    <div>
        <label asp-for="Street1"></label>
        <input asp-for="Street1" class="form-control" />
        <span asp-validation-for="Street1" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Street2"></label>
        <input asp-for="Street2" class="form-control" />
        <span asp-validation-for="Street2" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="State"></label>
        <input asp-for="State" class="form-control" />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="ZipCode"></label>
        <input asp-for="ZipCode" class="form-control" />
        <span asp-validation-for="ZipCode" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
